@model TurkeyBase.Models.Search
@{
    ViewBag.Title = "Home Page";
}
<div class="row">
    <div class="col-sm-6">
        @using (Html.BeginForm("Search", "Home", FormMethod.Get))
        {
            <h2>Fill one or more fields</h2>
            <div class="form-group">
                @Html.LabelFor(a => a.NationalIdentifier)
                @Html.EditorFor(a => a.NationalIdentifier, new { placeholder = "17291716060", htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group">
                @Html.LabelFor(a => a.First)
                @Html.EditorFor(a => a.First, new { htmlAttributes = new { placeholder = "Recep Tayyip", @class = "form-control" } })
            </div>
            <div class="form-group">
                @Html.LabelFor(a => a.Last)
                @Html.EditorFor(a => a.Last, new { htmlAttributes = new { placeholder = "Erdogan", @class = "form-control" } })
            </div>
            <button class="btn btn-lg btn-success">Search</button>
        }
    </div>
    @*</div>*@
</div>